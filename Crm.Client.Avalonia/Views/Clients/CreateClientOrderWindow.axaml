                Command="{Binding CreateCommand}"
                Margin="0 10" />
		<Button Content="Отмена"
                HorizontalAlignment="Stretch"
                Command="{Binding CancelCommand}"
                Margin="0 10" />
		<!--<TextBlock x:Name="FormValidation"
                   Foreground="{DynamicResource ErrorBrush}"
                   TextWrapping="Wrap" />-->
	</StackPanel>
