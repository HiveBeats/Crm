<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Crm.Client.Avalonia.Views.Clients.ClientsPageView">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>
		<ContentControl Content="{Binding MasterViewModel}" Grid.Row="0"></ContentControl>
		<ContentControl Content="{Binding DetailViewModel}" Grid.Row="1"></ContentControl>
	</Grid>
</UserControl>
